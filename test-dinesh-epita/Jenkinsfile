pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Explicitly tell Jenkins to use 'main' branch
                git branch: 'main', url: 'https://github.com/dinesh11990/Jenkins_DevOps'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Run') {
            steps {
                sh 'mvn exec:java -Dexec.mainClass="com.example.App"'
            }
        }
    }
}
